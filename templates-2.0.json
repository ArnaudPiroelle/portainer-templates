{
    "version": "2",
    "templates": [
      {
        "type": 3,
        "title": "Homer",
        "description": "Homer dashboard with service discovery",
        "categories": ["dashboard", "discovery"],
        "platform": "linux",
        "logo": "https://raw.githubusercontent.com/ArnaudPiroelle/portainer-templates/master/stacks/homer/logo.png",        
        "repository": {
          "url": "https://github.com/ArnaudPiroelle/portainer-templates",
          "stackfile": "stacks/homer/docker-compose.yml"
        },
        "env": [
          {
            "name": "DOCKER_DATA_FOLDER",
            "label": "Docker host folder",
            "description": "Host folder where containers will store data",
            "default": "/data"
          }
        ]
      },
      {
        "type": 3,
        "title": "Dozzle",
        "description": "Docker logs monitoring",
        "categories": ["monitoring", "logs"],
        "platform": "linux",
        "logo": "https://raw.githubusercontent.com/ArnaudPiroelle/portainer-templates/master/stacks/dozzle/logo.png",        
        "repository": {
          "url": "https://github.com/ArnaudPiroelle/portainer-templates",
          "stackfile": "stacks/dozzle/docker-compose.yml"
        },
        "env": [
          {
            "name": "HOST_TAG",
            "label": "Host tag",
            "description": "Tag used to identify host in dashboard",
            "default": "TheBeast"
          },
          {
            "name": "PUBLIC_DOMAIN",
            "label": "Public domain",
            "description": "Public domain use to generate dashboard link",
            "default": "arnaudpiroelle.com"
          }
        ]
      }
    ]
}